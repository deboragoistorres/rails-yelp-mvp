<h1>Restaurants#show</h1>
<h2>Name</h2>
<h2><%= @restaurant.name %></h2>
<h3>Address</h2>
 <p><%= @restaurant.address %></p>
 <h3>Category</h2>
  <p><%= @restaurant.category %></p>
  <h3>Phone Number</h2>
  <p><%= @restaurant.phone_number %></p>

<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
  <% end %>
<%= link_to 'Voltar para o menu', restaurants_path, class:'btn bg-light mp-5'%>
<a class=" btn btn-light" href="/restaurants/new">Adicionar restaurante</a>
